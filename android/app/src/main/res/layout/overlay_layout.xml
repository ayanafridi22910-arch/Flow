<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"> <!-- Solid dark background -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Green Shield Icon -->
        <ImageView
            android:id="@+id/shield_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_shield_check_green"
            android:layout_marginBottom="24dp" />

        <!-- "This page is blocked." Text -->
        <TextView
            android:id="@+id/blocked_page_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This page is blocked."
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- "BlockerHero is active" Text -->
        <TextView
            android:id="@+id/blocker_active_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BlockerHero is active"
            android:textColor="#B0BEC5"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <!-- "Why Blocked?" Button -->
        <Button
            android:id="@+id/why_blocked_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why Blocked?"
            android:textColor="@android:color/white"
            android:backgroundTint="#424242"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawablePadding="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:stateListAnimator="@null" />

    </LinearLayout>

    <!-- CLOSE Button at the bottom -->
    <Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#F44336"
        android:text="CLOSE"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:stateListAnimator="@null" />

</RelativeLayout>